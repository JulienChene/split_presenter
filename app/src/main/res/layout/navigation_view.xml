<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_navigation_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        />

    <View
        android:id="@+id/discover_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_navigation_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/likes_you_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        />

    <ImageView
        android:id="@+id/discover_icon"
        android:layout_width="@dimen/main_nav_size"
        android:layout_height="@dimen/main_nav_size"
        app:layout_constraintTop_toTopOf="@id/discover_button"
        app:layout_constraintLeft_toLeftOf="@id/discover_button"
        app:layout_constraintRight_toRightOf="@id/discover_button"
        app:layout_constraintBottom_toBottomOf="@id/discover_button"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_nav_discover_deselected"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        />

    <View
        android:id="@+id/likes_you_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_navigation_height"
        app:layout_constraintLeft_toRightOf="@id/discover_button"
        app:layout_constraintRight_toLeftOf="@id/matches_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        />

    <ImageView
        android:id="@+id/likes_you_icon"
        android:layout_width="@dimen/main_nav_size"
        android:layout_height="@dimen/main_nav_size"
        app:layout_constraintTop_toTopOf="@id/likes_you_button"
        app:layout_constraintLeft_toLeftOf="@id/likes_you_button"
        app:layout_constraintRight_toRightOf="@id/likes_you_button"
        app:layout_constraintBottom_toBottomOf="@id/likes_you_button"
        android:src="@drawable/ic_nav_likes_you_deselected"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        />

    <TextView
        android:id="@+id/likes_you_activity"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:minWidth="@dimen/navigation_badge_size"
        android:background="@drawable/badge_likes_you"
        app:layout_constraintBottom_toBottomOf="@id/likes_you_button"
        app:layout_constraintLeft_toLeftOf="@id/likes_you_icon"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="16dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        tools:text="3"
        android:textSize="9sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <View
        android:id="@+id/matches_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_navigation_height"
        app:layout_constraintLeft_toRightOf="@id/likes_you_button"
        app:layout_constraintRight_toLeftOf="@id/settings_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        />

    <ImageView
        android:id="@+id/matches_icon"
        android:layout_width="@dimen/main_nav_size"
        android:layout_height="@dimen/main_nav_size"
        app:layout_constraintTop_toTopOf="@id/matches_button"
        app:layout_constraintLeft_toLeftOf="@id/matches_button"
        app:layout_constraintRight_toRightOf="@id/matches_button"
        app:layout_constraintBottom_toBottomOf="@id/matches_button"
        android:src="@drawable/ic_nav_matches_deselected"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        />

    <TextView
        android:id="@+id/matches_activity"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@id/matches_button"
        app:layout_constraintLeft_toLeftOf="@id/matches_icon"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="16dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        tools:text="3"
        android:textSize="9sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:visibility="visible"
        tools:visibility="visible"
        />

    <View
        android:id="@+id/settings_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_navigation_height"
        app:layout_constraintLeft_toRightOf="@id/matches_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        />

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="@dimen/main_nav_size"
        android:layout_height="@dimen/main_nav_size"
        app:layout_constraintTop_toTopOf="@id/settings_button"
        app:layout_constraintLeft_toLeftOf="@id/settings_button"
        app:layout_constraintRight_toRightOf="@id/settings_button"
        app:layout_constraintBottom_toBottomOf="@id/settings_button"
        android:src="@drawable/ic_nav_settings_deselected"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        />

    <View
        android:id="@+id/settings_activity"
        android:layout_width="@dimen/navigation_badge_size"
        android:layout_height="@dimen/navigation_badge_size"
        android:background="@drawable/badge_settings"
        app:layout_constraintBottom_toBottomOf="@id/settings_button"
        app:layout_constraintLeft_toLeftOf="@id/settings_icon"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="13dp"
        />

</android.support.constraint.ConstraintLayout>
